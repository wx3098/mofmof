<%= form_with(model: @property, local: true) do |form| %>
  <% if @property.errors.any? %>
    <div id="error_explanation">
      <h2><%= @property.errors.count %>件のエラーがあります。</h2>
      <ul>

      <% @property.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


    <%= form.label '物件名' %><br>
    <%= form.text_field :property_name %><br>
    <%= form.label '賃料' %><br>
    <%= form.text_field :rent %>円<br>
    <%= form.label '住所' %><br>
    <%= form.text_field :address %><br>
    <%= form.label '築年数' %><br>
    <%= form.text_field :age %>年<br>
    <%= form.label '備考' %><br>
    <%= form.text_area :note %><br>
 
 <hr>

 <%= form.fields_for :nearest_stations do |nearest_station| %>
  <h3>
  最寄り駅<%= nearest_station.index + 1 %>
 </h3>
   <%= nearest_station.label '路線名' %><br>
   <%= nearest_station.text_field :route_name %><br>
   <%= nearest_station.label '駅名' %><br>
   <%= nearest_station.text_field :station_name %><br>
   <%= nearest_station.label '徒歩' %><br>
   <%= nearest_station.text_field :foot %><br>

 <% end %>
  <%= form.submit '登録する' %><br>
<% end %>
